<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_agent"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:contentDescription="Agent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back"/>

        <TextView
            android:id="@+id/agent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/valorant_font"
            android:text="AGENT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_agent" />

        <TextView
            android:id="@+id/agent_roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/valorant_font"
            android:text="Roles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agent_name" />

        <TextView
            android:id="@+id/agent_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/valorant_font"
            android:text="Description"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agent_roles" />

        <TextView
            android:id="@+id/agentQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/valorant_font"
            android:text="Q"
            app:layout_constraintStart_toStartOf="@id/agent_bio"
            app:layout_constraintTop_toBottomOf="@id/agent_bio" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/agentQ"
            app:layout_constraintTop_toBottomOf="@id/agent_bio">

            <TextView
                android:id="@+id/agent_skillQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/valorant_font"
                android:text="Skill Q" />

            <TextView
                android:id="@+id/agent_descQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:fontFamily="@font/valorant_font"
                android:text="Description Q"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/agentE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/valorant_font"
            android:text="E"
            app:layout_constraintStart_toStartOf="@id/agentQ"
            app:layout_constraintTop_toBottomOf="@id/lin1" />

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/agentE"
            app:layout_constraintTop_toBottomOf="@id/lin1">

            <TextView
                android:id="@+id/agent_skillE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/valorant_font"
                android:text="Skill E" />

            <TextView
                android:id="@+id/agent_descE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:fontFamily="@font/valorant_font"
                android:text="Description E"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/agentC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/valorant_font"
            android:text="C"
            app:layout_constraintStart_toStartOf="@id/agentE"
            app:layout_constraintTop_toBottomOf="@id/lin2" />

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/agentC"
            app:layout_constraintTop_toBottomOf="@id/lin2">

            <TextView
                android:id="@+id/agent_skillC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/valorant_font"
                android:text="Skill C" />

            <TextView
                android:id="@+id/agent_descC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/valorant_font"
                android:textSize="12sp"
                android:text="Description C"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/agentX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/valorant_font"
            android:text="Q"
            app:layout_constraintStart_toStartOf="@id/agentC"
            app:layout_constraintTop_toBottomOf="@id/lin3" />

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/agentX"
            app:layout_constraintTop_toBottomOf="@id/lin3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="34dp"
            >

            <TextView
                android:id="@+id/agent_skillX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/valorant_font"
                android:text="Skill X" />

            <TextView
                android:id="@+id/agent_descX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/valorant_font"
                android:text="Description X"

                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>